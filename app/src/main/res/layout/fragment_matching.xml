<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.digitalanchor.pangchat.frag.MemberFragment"
    android:background="@color/intro_background">
    <ListView
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/listMatching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:stackFromBottom="true"
        android:divider="@color/transparent"
        android:dividerHeight="0.0dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/no_recode"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_70px"
        android:text="@string/no_recode"
        android:background="@drawable/button"
        android:padding="0.0dp"
        android:layout_marginTop="@dimen/top_50px"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@color/text_bold"
        android:textSize="@dimen/button_text_size_35px"/>
</FrameLayout>