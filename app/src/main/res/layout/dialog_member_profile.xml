<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="@dimen/box_690px"
        android:layout_height="@dimen/top_90px"
        android:background="@color/button_text_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_50px"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="@dimen/top_50px"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20">

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/top_50px"
            android:background="@color/transparent"
            android:padding="0.0dp"
            android:src="@drawable/btn_close"
            />
    </LinearLayout>

    <kr.co.digitalanchor.pangchat.utils.FadeInNetworkImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/photo_320px"
        android:layout_height="@dimen/photo_320px"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="@dimen/top_50px"
        android:layout_marginLeft="@dimen/top_50px"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/top_50px"
        android:layout_marginTop="@dimen/top_50px"
        android:layout_below="@id/headerLayout"
        android:layout_toRightOf="@id/image_profile"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/profile_nick_name"
            android:layout_width="@dimen/intro_height_260px"
            android:layout_height="@dimen/top_50px"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_30px"
            android:text="닉네임"
            />
        
       <!-- <TextView
            android:id="@+id/profile_id"
            android:layout_width="@dimen/intro_height_260px"
            android:layout_height="@dimen/top_50px"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_30px"
            android:text="아이디"
            android:layout_marginTop="@dimen/top_18px"
            />-->

        <TextView
            android:id="@+id/profile_sex_age"
            android:layout_width="@dimen/intro_height_260px"
            android:layout_height="@dimen/top_50px"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_30px"
            android:text="남자/30세"
            android:layout_marginTop="@dimen/top_18px"
            />


        <TextView
            android:drawableLeft="@drawable/icon_heart"
            android:id="@+id/profile_like"
            android:layout_width="@dimen/intro_height_260px"
            android:layout_height="@dimen/top_50px"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_30px"
            android:text="300개/친구10명"
            android:layout_marginTop="@dimen/top_18px"
            />

        <TextView
            android:id="@+id/profile_city_job"
            android:layout_width="@dimen/intro_height_260px"
            android:layout_height="@dimen/top_50px"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_30px"
            android:text="서울/학생"
            android:layout_marginTop="@dimen/top_18px"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/interest_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_120px"
        android:layout_below="@id/image_profile"
        android:layout_marginTop="@dimen/font_30px"
        android:layout_marginLeft="@dimen/top_50px"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/text_nick_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="@dimen/button_text_size_35px"
                android:textColor="@color/text_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/font_30px"
                android:text="@string/profile_is"/>
            <TextView
                android:id="@+id/text_interest_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textSize="@dimen/button_text_size_35px"
                android:textColor="@color/text_bold"/>
            <TextView
                android:id="@+id/text_Interest_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="@dimen/button_text_size_35px"
                android:textColor="@color/text_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/font_30px"
                android:text="@string/profile_object"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_interest_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐거운 대화"
                android:textSize="@dimen/button_text_size_35px"
                android:textColor="@color/text_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/font_30px"
                android:text="@string/profile_interest"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/interest_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_30px"
        android:layout_marginLeft="@dimen/top_50px"
        android:layout_marginRight="@dimen/top_50px"
        android:layout_marginBottom="@dimen/top_50px">

        <Button
            android:id="@+id/btn_one_to_one"
            android:layout_width="@dimen/button_290px"
            android:layout_height="@dimen/top_70px"
            android:text="@string/one_to_one"
            android:textSize="@dimen/button_text_size_35px"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            android:padding="0.0dp"/>

        <Button
            android:id="@+id/btn_add_friend"
            android:layout_width="@dimen/button_290px"
            android:layout_height="@dimen/top_70px"
            android:text="@string/add_friend"
            android:textSize="@dimen/button_text_size_35px"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            android:padding="0.0dp"/>

    </LinearLayout>
</RelativeLayout>