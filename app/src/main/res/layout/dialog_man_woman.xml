<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_90px"
        android:background="@color/button_text_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_50px"
            android:text="@string/sex"
            android:textColor="@color/white"
            android:textSize="@dimen/top_50px"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20">

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/top_50px"
            android:background="@color/transparent"
            android:padding="0.0dp"
            android:src="@drawable/btn_close"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/font_30px"
        android:layout_marginBottom="@dimen/font_30px"
        android:layout_marginLeft="@dimen/font_30px"
        android:layout_marginRight="@dimen/font_30px"
        android:gravity="center">

        <Button
            android:id="@+id/btn_man_woman"
            android:layout_width="@dimen/button_width_190px"
            android:layout_height="@dimen/top_60px"
            android:text="@string/man_woman"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size_35px"
            android:background="@drawable/button"
            android:padding="0.0dp"/>

        <Button
            android:id="@+id/btn_man"
            android:layout_marginLeft="@dimen/button_left_margin_15px"
            android:layout_width="@dimen/button_width_190px"
            android:layout_height="@dimen/top_60px"
            android:text="@string/man"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size_35px"
            android:background="@drawable/button"
            android:padding="0.0dp"/>

        <Button
            android:id="@+id/btn_woman"
            android:layout_marginLeft="@dimen/button_left_margin_15px"
            android:layout_width="@dimen/button_width_190px"
            android:layout_height="@dimen/top_60px"
            android:text="@string/woman"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size_35px"
            android:background="@drawable/button"
            android:padding="0.0dp"/>

    </LinearLayout>
</LinearLayout>