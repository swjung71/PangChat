<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- top -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_160px"
        android:background="@color/font_transparent"
        android:orientation="horizontal"
        android:weightSum="13">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/top_50px"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/img_top_arrow"
            android:drawablePadding="10dp"
            android:text="@string/waiting"
            android:textColor="@color/white"
            android:textSize="@dimen/top_60px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="12"></LinearLayout>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_30px"
            android:layout_marginTop="@dimen/top_70px"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="0.0dp"
            android:src="@drawable/img_top_menu"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/waiting_backgroud"
        android:layout_height="@dimen/waiting_backgroud"
        android:background="@color/intro_background"
        android:layout_marginTop="@dimen/top_50px"
        android:layout_marginBottom="@dimen/top_50px"
        android:layout_gravity="center"
        >

        <kr.co.digitalanchor.pangchat.view.RoundedNetworkImageView
            android:layout_width="@dimen/wating_circle"
            android:layout_height="@dimen/wating_circle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/waiting_265px"
            android:id="@+id/rounded_image"
            />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디:서울"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size_35px"
            android:layout_marginBottom="@dimen/top_50px"
            android:layout_gravity="bottom|center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/waiting_backgroud"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/intro_width_250px"
            android:layout_height="@dimen/intro_width_250px"
            android:background="@drawable/round_button"
            android:text="취소"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/top_40px"
            />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="@dimen/intro_width_250px"
            android:layout_height="@dimen/intro_width_250px"
            android:background="@drawable/round_button"
            android:text="수락"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/top_40px"
            />

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="@dimen/intro_width_250px"
            android:layout_height="@dimen/intro_width_250px"
            android:background="@drawable/round_button"
            android:text="거절"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/top_50px"
            android:textSize="@dimen/top_40px"
            />
    </LinearLayout>

</LinearLayout>