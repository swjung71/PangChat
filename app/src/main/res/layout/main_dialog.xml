<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_90px"
        android:background="@color/font_transparent"
        android:weightSum="5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dots"
            android:layout_marginLeft="@dimen/top_50px"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5">

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_close"
            android:padding="0.0dp"
            android:background="@color/transparent"
            android:layout_marginRight="@dimen/top_50px"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_30px"
            android:layout_marginRight="@dimen/top_50px">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="@dimen/button_width_200px"
                android:layout_height="@dimen/top_60px"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="@string/profile_mod"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size_35px"
                android:layout_marginLeft="@dimen/top_50px"
                />
            <Button
                android:id="@+id/btn_notices"
                android:layout_width="@dimen/button_width_200px"
                android:layout_height="@dimen/top_60px"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="@string/notices"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size_35px"
                android:layout_marginLeft="@dimen/button_left_margin_15px"
                />
            <Button
                android:id="@+id/btn_app_info"
                android:layout_width="@dimen/button_width_200px"
                android:layout_height="@dimen/top_60px"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="@string/app_info"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size_35px"
                android:layout_marginLeft="@dimen/button_left_margin_15px"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_30px"
            android:layout_marginBottom="@dimen/top_50px">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="@dimen/button_width_200px"
                android:layout_height="@dimen/top_60px"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="@string/logout"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size_35px"
                android:layout_marginLeft="@dimen/top_50px"
                />

            <Button
                android:id="@+id/btn_withdraw"
                android:layout_width="@dimen/button_width_200px"
                android:layout_height="@dimen/top_60px"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="@string/withdraw"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size_35px"
                android:layout_marginLeft="@dimen/button_left_margin_15px"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>